@model Book
@{
    ViewData["Title"] = "Details";
}

<div class="card border-success rounded-4 mt-5 overflow-hidden">
    <div class="card-body p-0">
        <div class="row">
            <div class="col-md-4">
                <img src="@($"{AttribuesImage.IamgePath}/{Model.Cover}")" alt="@Model.Title" class="w-100" />
            </div>
            <div class="col-md-8 px-5 py-4 d-flex flex-column justify-content-between">
                <div>
                    <h1 class="text-success fw-bolder text-end">(<span class="badge bg-info fs-5 mb-4 ">@Model.Type.Type</span>)@Model.Title </h1>
                    
                    <p class="fs-5 text-end">@Model.Description</p>
                </div>
            </div>

            
        </div>
    </div>
</div>
